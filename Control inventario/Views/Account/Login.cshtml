@using Control_inventario.Models
@model LoginViewModel
@{
    ViewBag.Title = "Inicio de sesion";
}


<div class="masthead ">
    <div class="masthead-content padspace">
        <div class="container">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Iniciar sesion</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="col-md-4">Ingresa tu correo electronico</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control ", @placeholder = "Ejemplo:david@gmail.com" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4">Ingresa tu contraseña</label>
                    <div class="col-md-10">

                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Ejemplo:david123" })

                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            <label class="col-md-1">Recuerdame</label>
                        </div>
                    </div>
                </div>
                
                
                <div class="form-group ">
                    <div class="col-md-offset-2 col-md-10">

                        <a href="@Url.Action("ForgotPassword","Account")" class="btn btn-danger ">Olvidaste tu contraseña?</a>
                        <a href="@Url.Action("Register","Account")" class="btn btn-info sep">Crear nuevo usuario</a>

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10 text-center">
                        <input type="submit" value="Log in" class="btn btn-outline-success" />
                        <a href="@Url.Action("Index","Home")" class="btn btn-outline-danger bn">Cancelar</a>

                    </div>
                </div>




            }
        </div>
    </div>
    
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}