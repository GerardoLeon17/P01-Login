@model Control_inventario.Models.Supplier

@{
    ViewBag.Title = "Details";
}



<div class="row justify-content-between">
    <div class="col-md-6">
        <div class="card  mb-4">
            <div class="card-header ">
                Detalles de @Model.SupplierName
            </div>
            <div class="card-body">
                <table class="table-borderless">
                    <tr>
                        <td><span class="icon text-black-50"><i class="fas fa-user-circle"></i>  </span> </td>
                        <td><b> @Html.DisplayFor(model => model.SupplierCode)</b></td>
                    </tr>

                    <tr>
                        <td>
                            <span class="icon text-black-50"><i class="fas fa-user-circle"></i>  </span>                        </td>
                        <td>
                            @Html.DisplayFor(model => model.SupplierName)
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <span class="icon text-black-50"><i class="fas fa-envelope"></i>  </span>                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Email)
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <span class="icon text-black-50"><i class="fas fa-phone"></i>  </span>                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Phone)
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <span class="icon text-black-50"><i class="fas fa-address-book"></i>  </span>                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Address)
                        </td>
                    </tr>




                </table>
            </div>
        </div>

    </div>

</div>


<div class="row justify-content-center">
   
        <a href="@Url.Action("Edit", "Suppliers", new { id = Model.Id })" class=" text-white btn btn-warning">Editar</a>
        <a href="@Url.Action("Delete", "Suppliers", new { id = Model.Id })" class="text-white btn btn-secondary" style="margin-left:20px;">Eliminar</a>  
        <a href="@Url.Action("Index", "Suppliers")" class=" text-white btn  btn-danger" style="margin-left:20px;">Regresar</a>
    </div>

    